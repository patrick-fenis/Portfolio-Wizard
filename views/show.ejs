<%- include('./partials/header.ejs') %>

<body class="stock-info">
    <h2><%=stockInfo.companyName%></h2>
    <h3><%=stockInfo.tickerSymbol%></h3>
    <div>
        <span>Shares: <%=stockInfo.quantity%></span>
        <span>Purchase Price: $<%=stockInfo.purchasePrice%></span>
    </div>
</body>
<footer>
    <span class="footer-buttons"><a href="/overview/<%=stockInfo._id%>/edit"><button>Adjust Position</button></a></span>
    <span class="footer-buttons">
        <form class="liq-button" action="/overview/<%=stockInfo._id%>?_method=DELETE" method="POST">
            <input class="liq-button" type="submit" value="Liquidate">
        </form>
    </span>
    <span class="footer-buttons"><a href="/explore/<%=stockInfo.tickerSymbol%>"><button>Market Data</button></a></span>
</footer>